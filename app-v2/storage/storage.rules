rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Pictures uploaded by users
    match /pictures/{fileName} {
      // Anyone can read pictures (books are public)
      allow read: if true;

      // Authenticated users can upload pictures
      allow create: if request.auth != null &&
                       request.resource.size < 10 * 1024 * 1024 && // 10MB limit
                       request.resource.contentType.matches('image/.*');

      // Authenticated users can update/delete their own pictures
      allow update, delete: if request.auth != null;
    }

    // Cover images for books
    match /covers/{fileName} {
      // Anyone can read cover images
      allow read: if true;

      // Authenticated users can upload cover images
      allow create: if request.auth != null &&
                       request.resource.size < 5 * 1024 * 1024 && // 5MB limit
                       request.resource.contentType.matches('image/.*');

      // Authenticated users can update/delete cover images
      allow update, delete: if request.auth != null;
    }
  }
}
